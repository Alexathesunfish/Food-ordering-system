    width: 90%;
    margin: 40px auto;
}

.top-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.btn {
    padding: 8px 15px;
    border: none;
    color: white;
    border-radius: 4px;
    cursor: pointer;
}

.btn-primary { background: #0d6efd; }
.btn-success { background: #28a745; }
.btn-danger { background: #dc3545; }

table {
    width: 100%;
    border-collapse: collapse;
}

th, td {
    border: 1px solid #ddd;
    padding: 12px;
    text-align: center;
}

thead {
    background: #f8f9fa;
}

tbody tr:nth-child(even) {
    background: #f2f2f2;
}

/* Modal */
.modal {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.6);
    justify-content: center;
    align-items: center;
}

.modal-content {
    background: white;
    padding: 20px;
    width: 350px;
    border-radius: 5px;
}

